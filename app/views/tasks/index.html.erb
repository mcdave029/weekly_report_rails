<p id="notice"><%= notice %></p>

<%= link_to 'New Task', new_task_path, class: "float-right btn btn-primary" %>

<h1>Tasks</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Project</th>
      <th>Name</th>
      <th>Start at</th>
      <th>End at</th>
      <th>Status</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.project.name %></td>
        <td><%= task.name %></td>
        <td><%= prettify task.start_at %></td>
        <td><%= prettify task.end_at %></td>
        <td>
          <span class="badge badge-pill badge-<%= status_color task %>">
            <%= task.status %>
          </span>
        </td>
        <td>
          <%= link_to 'Show', task, class: "btn btn-info btn-sm" %>
          <%= link_to 'Edit', edit_task_path(task), class: "btn btn-primary btn-sm" %>
          <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
